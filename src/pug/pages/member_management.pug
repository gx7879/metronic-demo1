extends ../layout/main

block variables
  - var page = 'member_management'
  - var title = '後台使用者管理';
  - var description = 'The most advanced Bootstrap Admin Theme on Themeforest trusted by 94,000 beginners and professionals. Multi-demo, Dark Mode, RTL support and complete React, Angular, Vue &amp; Laravel versions. Grab your copy now and get life-time updates for free.';
  - var pageClass = 'index-page';
block head
  // begin::Page Vendor Stylesheets(used by this page)
  link(href='assets/plugins/custom/datatables/datatables.bundle.css', rel='stylesheet', type='text/css')
  // end::Page Vendor Stylesheets

block content
  // begin::Container
  #kt_content_container.container-xxl

    // begin::Table
    .card.card-flush.mt-6.mt-xl-9
      // begin::Card header
      .card-header.mt-5
        // begin::Card title
        .card-title.flex-column
          h3.fw-bolder.mb-1 #{title}
          //- .fs-6.text-gray-400 Total $260,300 sepnt so far
        // begin::Card title
        // begin::Card toolbar
        .card-toolbar.my-1
          // begin::Search
          .d-flex.align-items-center.position-relative.my-1.me-4
            // begin::Svg Icon | path: icons/duotune/general/gen021.svg
            span.svg-icon.svg-icon-3.position-absolute.ms-3
              svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24', fill='none')
                rect(opacity='0.5', x='17.0365', y='15.1223', width='8.15546', height='2', rx='1', transform='rotate(45 17.0365 15.1223)', fill='black')
                path(d='M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z', fill='black')
            // end::Svg Icon
            input#kt_filter_search.form-control.form-control-solid.form-select-sm.w-150px.ps-9(type='text', placeholder='會員名稱')
          // end::Search
          button.btn.btn-sm.btn-primary(type="button") 搜尋
        // begin::Card toolbar
      // end::Card header
      // begin::Card body
      .card-body.pt-0
        // begin::Table container
        .table-responsive
          // begin::Table
          table.table.table-row-dashed.table-row-gray-300.gy-7
            thead
              tr.fw-bolder.fs-6.text-gray-800
                th #
                th 名稱
                th 帳號
                th 角色
                th 
            tbody
              tr
                td 1
                td 王小明
                td abcd
                td 會員
                td.text-end
                  button.btn.btn-sm.btn-primary(type="button" data-bs-toggle="modal" data-bs-target="#kt_modal_add_customer") 編輯
              tr
                td 2
                td 陳小春
                td test
                td 路人
                td.text-end
                  button.btn.btn-sm.btn-primary(type="button") 編輯
          // end::Table
        ul.pagination
          li.page-item.previous.disabled
            a.page-link(href='#')
              i.previous
          li.page-item.active
            a.page-link(href='#') 1
          li.page-item
            a.page-link(href='#') 2
          li.page-item
            a.page-link(href='#') 3
          li.page-item
            a.page-link(href='#') 4
          li.page-item
            a.page-link(href='#') 5
          li.page-item
            a.page-link(href='#') 6
          li.page-item.next
            a.page-link(href='#')
              i.next
        // end::Table container
      // end::Card body
    // end::Card
    // begin::Modal - Customers - Add
    .modal.fade#kt_modal_add_customer(tabindex='-1', aria-hidden='true')
      // begin::Modal dialog
      .modal-dialog.modal-dialog-centered.mw-650px
        // begin::Modal content
        .modal-content
          // begin::Form
          form.form#kt_modal_add_customer_form(action='#', data-kt-redirect='../../demo1/dist/apps/customers/list.html')
            // begin::Modal header
            .modal-header#kt_modal_add_customer_header
              // begin::Modal title
              h2.fw-bolder 編輯
              // end::Modal title
              // begin::Close
              .btn.btn-icon.btn-sm.btn-active-icon-primary(data-bs-dismiss="modal")
                // begin::Svg Icon | path: icons/duotune/arrows/arr061.svg
                span.svg-icon.svg-icon-1
                  svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24', fill='none')
                    rect(opacity='0.5', x='6', y='17.3137', width='16', height='2', rx='1', transform='rotate(-45 6 17.3137)', fill='black')
                    rect(x='7.41422', y='6', width='16', height='2', rx='1', transform='rotate(45 7.41422 6)', fill='black')
                // end::Svg Icon
              // end::Close
            // end::Modal header
            // begin::Modal body
            .modal-body.py-10.px-lg-17
              // begin::Scroll
              .scroll-y.me-n7.pe-7#kt_modal_add_customer_scroll(data-kt-scroll='true', data-kt-scroll-activate='{default: false, lg: true}', data-kt-scroll-max-height='auto', data-kt-scroll-dependencies='#kt_modal_add_customer_header', data-kt-scroll-wrappers='#kt_modal_add_customer_scroll', data-kt-scroll-offset='300px')
                // begin::Input group
                .fv-row.mb-7
                  // begin::Label
                  label.required.fs-6.fw-bold.mb-2 帳號
                  // end::Label
                  // begin::Input
                  input.form-control.form-control-solid(type='text', name='name')
                  // end::Input
                // end::Input group
                // begin::Input group
                .fv-row.mb-7
                  // begin::Label
                  label.fs-6.fw-bold.mb-2
                    span.required 密碼
                    //- i.fas.fa-exclamation-circle.ms-1.fs-7(data-bs-toggle='tooltip', title='Email address must be active')
                  // end::Label
                  // begin::Input
                  input.form-control.form-control-solid(type='password', name='password')
                  // end::Input
                // end::Input group
                // begin::Input group
                .fv-row.mb-15
                  // begin::Label
                  label.fs-6.fw-bold.mb-2 名稱
                  // end::Label
                  // begin::Input
                  input.form-control.form-control-solid(type='text', name='description')
                  // end::Input
                // end::Input group
              // end::Scroll
            // end::Modal body
            // begin::Modal footer
            .modal-footer.flex-center
              // begin::Button
              button#kt_modal_add_customer_cancel.btn.btn-light.me-3(type='reset') Discard
              // end::Button
              // begin::Button
              button#kt_modal_add_customer_submit.btn.btn-primary(type='submit')
                span.indicator-label Submit
                span.indicator-progress
                  | Please wait...

                  span.spinner-border.spinner-border-sm.align-middle.ms-2
              // end::Button
            // end::Modal footer
          // end::Form
    // end::Modal - Customers - Add
  // end::Container


